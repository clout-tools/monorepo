{
  "version": 2,
  "projects": {
    "sample": {
      "root": "packages/sample",
      "sourceRoot": "packages/sample/src",
      "projectType": "library",
      "targets": {
        "build": {
          "executor": "@nrwl/node:package",
          "outputs": [
            "{options.outputPath}"
          ],
          "options": {
            "outputPath": "dist/packages/sample",
            "tsConfig": "packages/sample/tsconfig.lib.json",
            "packageJson": "packages/sample/package.json",
            "main": "packages/sample/src/index.ts",
            "assets": [
              "packages/sample/*.md"
            ]
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "outputs": [
            "{options.outputFile}"
          ],
          "options": {
            "lintFilePatterns": [
              "packages/sample/**/*.ts"
            ]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": [
            "coverage/packages/sample"
          ],
          "options": {
            "jestConfig": "packages/sample/jest.config.js",
            "passWithNoTests": true
          }
        },
        "deploy": {
          "executor": "ngx-deploy-npm:deploy",
          "options": {
            "access": "public"
          }
        }
      }
    },
    "workspace": {
      "root": ".",
      "targets": {
        "version": {
          "executor": "@jscutlery/semver:version",
          "options": {
            "syncVersions": true
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/workspace"
  }
}
